---
import { menuItems } from '@utils/globals';
---
<nav>
    <menu>
        {menuItems.map((menuItem) => {
            return (
                <li><a href={menuItem.url}>{menuItem.title}</a></li>
            )
        })}
    </menu>
</nav>

<style>
    nav {
        font-family: "Public Sans Variable", sans-serif;
        margin-bottom: 1rem;
    }
    menu {
        margin-inline-start: 0;
        padding-inline-start: 0;
    }
    li {
        display: inline;
        padding-right: 1rem;
    }
</style>