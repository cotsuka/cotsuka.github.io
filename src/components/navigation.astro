---
import { menuItems } from '@utils/globals';
---

<nav>
  <menu class="inline-menu inline-menu--spaced">
    {
      menuItems.map((menuItem) => (
        <li>
          <a href={menuItem.url}>{menuItem.title}</a>
        </li>
      ))
    }
  </menu>
</nav>

<style>
  nav {
    font-family: 'Public Sans Variable', sans-serif;
    margin-bottom: 1rem;
  }
</style>
