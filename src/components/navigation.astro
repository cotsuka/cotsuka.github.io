---
import { menuItems } from '@utils/globals';
---

<nav>
  <menu class="inline-menu">
    {
      menuItems.map((menuItem) => (
        <li>
          <a href={menuItem.url}>{menuItem.title}</a>
        </li>
      ))
    }
  </menu>
</nav>

<style>
  nav {
    font-family: var(--font-sans);
    margin-block-end: 1rem;
  }
  li {
    padding-inline-end: 1rem;
  }
</style>
